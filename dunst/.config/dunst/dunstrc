[global]
    monitor = 0
    follow = none

    enable_posix_regex = true

    width = 350
    height = 150
    origin = top-right
    offset = 12x12
    scale = 0

    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 128
    progress_bar_max_width = 256
    progress_bar_corner_radius = 0
    progress_bar_corners = all
    icon_corner_radius = 0
    icon_corners = all

    notification_limit = 20
    indicate_hidden = yes

    transparency = 0

    frame_width = 4
    separator_height = 4
    gap_size = 0

    padding = 8
    horizontal_padding = 8
    text_icon_padding = 0

    frame_color = "#89b4fa"
    highlight = "#a6e2a1"
    separator_color = frame

    sort = urgency_descending 

    layer = overlay

    idle_threshold = 0

    font = JetBrainsMonoNL Nerd Font Mono 10 
    line_height = 0

    markup = full

    # %a  appname
    # %s  summary
    # %b  body
    # %i  iconname (including its path)
    # %I  iconname (without its path)
    # %p  progress value if set ([  0%] to [100%]) or nothing
    # %n  progress value if set without any extra characters
    # %%  Literal %
    format = "<b>%s</b>\n%b"

    alignment = left
    vertical_alignment = center

    show_age_threshold = 30

    ellipsize = middle

    ignore_newline = false
    stack_duplicates = true
    hide_duplicate_count = false

    show_indicators = yes

    enable_recursive_icon_lookup = true
    icon_theme = Papirus-Dark
    icon_position = left

    min_icon_size = 32
    max_icon_size = 128

    sticky_history = yes
    history_length = 64

    dmenu = /usr/bin/rofi -dmenu -p 'dunst'
    browser = /usr/bin/firefox
    always_run_script = true

    title = Dunst
    class = Dunst

    corner_radius = 0
    corners = all

    ignore_dbusclose = false

    force_xwayland = false

    # * none: Don't do anything.
    # * do_action: Invoke the action determined by the action_name rule. If there is no
    #              such action, open the context menu.
    # * open_url: If the notification has exactly one url, open it. If there are multiple
    #             ones, open the context menu.
    # * close_current: Close current notification.
    # * close_all: Close all notifications.
    # * context: Open context menu for the notification.
    # * context_all: Open context menu for all notifications.
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = false

[urgency_low]
    background = "#1e1e2e"
    foreground = "#cdd6f4"
    timeout = 10
    default_icon = /usr/share/icons/Papirus-Dark/32x32/status/dialog-warning.svg

[urgency_normal]
    background = "#1e1e2e"
    foreground = "#cdd6f4"
    timeout = 10
    override_pause_level = 30
    default_icon = /usr/share/icons/Papirus-Dark/32x32/status/dialog-information.svg

[urgency_critical]
    background = "#1e1e2e"
    foreground = "#cdd6f4"
    frame_color = "#f38ba8"
    timeout = 0
    override_pause_level = 60
    default_icon = /usr/share/icons/Papirus-Dark/32x32/status/dialog-error.svg
